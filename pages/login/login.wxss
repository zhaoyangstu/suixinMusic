/* pages/login/login.wxss */
.container{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 20rpx 0rpx;
}
.wrapper{
  padding: 0 40rpx;
  color: gray;
}
.font{
  font-size: 100rpx;
  color: rgba(0,0,0,.1);
  opacity: .5;
}
.wrapper .welcome{
  position: absolute;
  top: 65rpx;
  left: 30rpx;
  font-size: 44rpx;
}
.input-content .phone{
  /* width: 100%; */
  height: 80rpx;
  font-size: 30rpx;
  background-color: #F7F6FB;
  border-radius: 15rpx;
  padding: 10rpx 15rpx;
  margin: 40rpx 0;
}
.input-content .pwd{
  /* width: 100%; */
  height: 80rpx;
  font-size: 30rpx;
  background-color: #F7F6FB;
  border-radius: 15rpx;
  padding: 10rpx 15rpx;
  margin-bottom: 70rpx;
}
.wrapper button{
  height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  background-color: #d43c33;
  font-size: 34rpx;
  margin-bottom: 30rpx;
}
.wrapper .forget{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #869ed6;
}
.register{
  position: absolute;
  left: 0;
  top: 1100rpx;
  width: 100%;
  font-size: 32rpx;
  text-align: center;
}
.register text:last-child{
  color: #869ed6;
}