/* pages/index/index.wxss */
.changeimg{
  width: 100%;
  height: 300rpx;
}
image{
  width: 100%;
  height: 100%;
}
.nav-container{
  display:flex
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  margin: 20rpx 0;
  font-size: 38rpx;
  background-color:rgb(240,19,19);
  color: #eee;
}
.nav-item text:nth-child(2){
  font-size: 31rpx;
}
.recommend-area{
  padding: 0 20rpx;
}
.recommend-image{
  width: 100%;
  height: 300rpx;
  display: flex;
  
}
.recommend-image .scrollitem1{
  margin-right: 20rpx;
}
.recommend-image .scrollitem1 image{
  width: 200rpx;
  height: 200rpx;
  
  border-radius: 10rpx;
}
.recommend-image .scrollitem1 .describetion{
  width: 200rpx;
 
  font-size: 26rpx;
  display:-webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 400rpx;
  font-size: 34rpx;
}
.topListSwiper  .swiperitem view:nth-child(1){
 font-size: 30rpx;
 line-height: 80rpx;
}
.topListSwiper .swiperitem{
  width: 96% ;
  background-color:#fbfbfb;
}
.topListSwiper .musicItem{
 
  display: flex;

  margin-bottom:20rpx;
}

.topListSwiper .musicItem image{
 
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.topList .musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  
}
.topList .musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;  
  max-width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}