<!--pages/search/search.wxml-->

<view class="search-container">
<!-- 头部search区域搭建 -->
<view class="header">
  <view class="search-input">
    <text class="iconfont icon-sousuo search">
    </text>
    <input type="search" value="{{inputContent}}" placeholder="{{placeholder}}" class="search-box" placeholder-class="placeholder"
    bindinput="handleInput" />
    <text class="clear" bindtap="handleClear" wx:key='item' hidden="{{!inputContent}}">X</text>
  </view>
  <text class="iconfont icon-fanhui back" bindtap="toVideo"></text>
</view>
<!-- 搜索区内容展示 -->
<block wx:if="{{searchList.length}}">
  <view class="show-search">
  <view class="input-content">搜索内容：{{inputContent}}</view>
  <view class="request-content" wx:for='{{searchList}}' wx:key="id" bindtap="handleSearch" id="{{item.id}}">
    <text class="iconfont icon-sousuo request-icon"></text>
    <text class="request-message">{{item.name}}</text>
  </view>
</view>
</block>

<block wx:else>
  <view class="history">
    <view class="history-content">
      <view class="history-item" wx:for="{{historyList}}" wx:key="item">
        {{item}}
      </view>
      <text class="iconfont icon-shanchu1 delete" bindtap="handleDelete" wx:if="{{historyList.length}}"></text>
    </view>
  </view>
<!-- 热搜榜 -->
  <view class="hot-search">
  <view class="hot-name">热搜榜</view>
  <view class="song-list">
    <view class="song-info" wx:for="{{hotSongList}}"
    wx:key="searchWord" >
      <text class="number">{{index + 1}}</text>
      <text class="song-name">{{item.searchWord}}</text>
      <image class="iconImage" src="{{item.iconUrl}}"
      wx:if="{{item.iconUrl}}"></image>
    </view>
  </view>
</view>
</block>
</view>
